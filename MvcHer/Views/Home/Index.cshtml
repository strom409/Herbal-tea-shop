<script>
$(document).ready(function() {
    // Add to Cart functionality
    $('.add-to-cart').click(function(e) {
        e.preventDefault();
        
        var productId = $(this).data('product-id');
        var productName = $(this).data('product-name');
        
        // Disable button temporarily
        var $button = $(this);
        var originalText = $button.html();
        $button.prop('disabled', true).html('<i class="fa fa-spinner fa-spin me-1"></i>Adding...');
        
        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: {
                productId: productId,
                quantity: 1
            },
            success: function(response) {
                if (response.success) {
                    // Update cart count in navigation
                    updateCartCount();
                    
                    // Show success message
                    showNotification('success', productName + ' added to cart successfully!');
                } else {
                    showNotification('error', 'Error: ' + response.message);
                }
            },
            error: function() {
                showNotification('error', 'Error adding product to cart');
            },
            complete: function() {
                // Re-enable button
                $button.prop('disabled', false).html(originalText);
            }
        });
    });
    
    // More Detail functionality
    $('.more-detail-btn').click(function(e) {
        e.preventDefault();
        
        var productId = $(this).data('product-id');
        var productName = $(this).data('product-name');
        var productPrice = $(this).data('product-price');
        var productImage = $(this).data('product-image');
        var productDescription = $(this).data('product-description');
        var productRating = $(this).data('product-rating');
        
        // Populate modal with product details
        $('#product-detail-name').text(productName);
                $('#product-detail-price').text('‚Çπ' + productPrice);
        $('#product-detail-image').attr('src', productImage).attr('alt', productName);
        $('#product-detail-description').text(productDescription || 'Premium quality tea with exceptional taste and aroma.');
        
        // Generate star rating
        var stars = '';
        for (var i = 1; i <= 5; i++) {
            if (i <= productRating) {
                stars += '<i class="fa fa-star"></i>';
            } else {
                stars += '<i class="fa fa-star-o"></i>';
            }
        }
        $('#product-detail-rating').html(stars);
        
        // Set up add to cart button
        $('#product-detail-add-to-cart').off('click').on('click', function() {
            var quantity = parseInt($('#product-detail-quantity').val()) || 1;
            addToCartFromModal(productId, productName, quantity);
        });
        
        // Show modal
        $('#productDetailModal').modal('show');
    });
    
    // Quantity controls
    $('#quantity-decrease').click(function() {
        var quantity = parseInt($('#product-detail-quantity').val());
        if (quantity > 1) {
            $('#product-detail-quantity').val(quantity - 1);
        }
    });
    
    $('#quantity-increase').click(function() {
        var quantity = parseInt($('#product-detail-quantity').val());
        if (quantity < 99) {
            $('#product-detail-quantity').val(quantity + 1);
        }
    });
});

function updateCartCount() {
    $.ajax({
        url: '@Url.Action("GetCartCount", "Cart")',
        type: 'GET',
        success: function(response) {
            // Update cart count display if it exists
            $('.cart-count').text(response.count);
            $('#cart-count').text(response.count);
        }
    });
}

function showNotification(type, message) {
    // Create notification element
    var alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
    var iconClass = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
    
    var notification = $('<div class="alert ' + alertClass + ' alert-dismissible fade show position-fixed" style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">' +
        '<i class="fa ' + iconClass + ' me-2"></i>' + message +
        '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
        '</div>');
    
    // Add to body and auto-remove after 3 seconds
    $('body').append(notification);
    setTimeout(function() {
        notification.alert('close');
    }, 3000);
}

