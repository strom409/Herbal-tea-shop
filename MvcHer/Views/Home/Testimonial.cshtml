@model IEnumerable<MvcHer.Models.Testimonial>

@{
    ViewData["Title"] = "Customer Testimonials - TEA HOUSE";
    var testimonials = Model?.ToList() ?? new List<MvcHer.Models.Testimonial>();
}

<!-- Testimonials Section with Same Design as Home Page -->
<div class="container-xxl py-5">
    <div class="container">
        <!-- Section Header -->
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <div class="testimonial-badge mb-3">
                <span class="badge-text">‚ú® Customer Stories</span>
            </div>
            <h1 class="testimonial-main-title mb-4">
                What Our <span class="highlight-text-green">Customers</span> Say
            </h1>
            <p class="testimonial-subtitle">
                Discover authentic experiences from our valued customers who have fallen in love with our premium tea collection
            </p>
        </div>

        <!-- Trust Indicators -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="trust-indicator text-center">
                    <div class="trust-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="trust-number">@testimonials.Count()+</h3>
                    <p class="trust-label">Happy Customers</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="trust-indicator text-center">
                    <div class="trust-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h3 class="trust-number">@(testimonials.Any() ? testimonials.Average(t => t.Rating).ToString("F1") : "4.9")</h3>
                    <p class="trust-label">Average Rating</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="trust-indicator text-center">
                    <div class="trust-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h3 class="trust-number">24h</h3>
                    <p class="trust-label">Fast Delivery</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <div class="trust-indicator text-center">
                    <div class="trust-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3 class="trust-number">100%</h3>
                    <p class="trust-label">Organic</p>
                </div>
            </div>
        </div>

        @if (testimonials.Any())
        {
            <!-- Testimonials Carousel with Same Design as Home Page -->
            <div class="testimonials-carousel owl-carousel owl-theme">
                @foreach (var testimonial in testimonials)
                {
                    <div class="testimonial-card">
                        <div class="testimonial-content">
                            <div class="testimonial-header">
                                <div class="customer-photo">
                                    @if (!string.IsNullOrEmpty(testimonial.ClientImageUrl))
                                    {
                                        <img src="@testimonial.ClientImageUrl" alt="@testimonial.ClientName" />
                                    }
                                    else
                                    {
                                        <div class="photo-placeholder">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </div>
                                <div class="customer-info">
                                    <h4 class="customer-name">@testimonial.ClientName</h4>
                                    <div class="customer-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= testimonial.Rating)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(testimonial.ClientProfession))
                                    {
                                        <p class="customer-profession">@testimonial.ClientProfession</p>
                                    }
                                </div>
                                @if (testimonial.IsFeatured)
                                {
                                    <div class="featured-badge">
                                        <i class="fas fa-crown"></i>
                                        <span>Featured</span>
                                    </div>
                                }
                            </div>
                            <div class="testimonial-text">
                                <i class="fas fa-quote-left quote-icon"></i>
                                <p>@testimonial.TestimonialText</p>
                            </div>
                            @if (testimonial.IsApproved)
                            {
                                <div class="verified-badge">
                                    <i class="fas fa-check-circle"></i>
                                    <span>Approved Review</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="empty-state">
                    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                    <h3 class="text-muted">No Testimonials Yet</h3>
                    <p class="text-muted">Be the first to share your experience with our premium tea collection!</p>
                    <a asp-controller="Store" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-shopping-cart me-2"></i>Shop Now
                    </a>
                </div>
            </div>
        }
    </div>
</div>

