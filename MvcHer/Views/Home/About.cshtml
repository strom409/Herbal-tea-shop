@model MvcHer.Models.AboutUs?

@{
    ViewData["Title"] = "About Us - Herbal Tea";
    var aboutUs = Model ?? new MvcHer.Models.AboutUs
    {
        Title = "Welcome to Herbal Tea",
        Subtitle = "Crafting exceptional tea experiences with passion and tradition",
        Description = "We are passionate about bringing you the finest tea experiences.",
        FounderName = "Tea Master",
        FounderTitle = "Founder & CEO",
        FounderMessage = "Our journey began with a love for exceptional tea.",
        Mission = "To deliver the world's finest teas with quality and sustainability.",
        Vision = "To become the global leader in premium tea retail.",
        Values = "Quality, Authenticity, Sustainability, Customer Focus",
        YearsOfExperience = 14,
        HappyCustomers = 25000,
        TeaVarieties = 150,
        CountriesServed = 35
    };
}

<style>
    .about-hero {
        background: linear-gradient(135deg, #8BC34A 0%, #689F38 50%, #558B2F 100%);
        color: white;
        padding: 100px 0;
        position: relative;
        overflow: hidden;
    }
    
    .about-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.1)"/><circle cx="75" cy="75" r="1.5" fill="rgba(255,255,255,0.05)"/><circle cx="50" cy="10" r="0.5" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        opacity: 0.3;
    }
    
    .floating-tea-leaf {
        position: absolute;
        color: rgba(255,255,255,0.1);
        font-size: 2rem;
        animation: float 6s ease-in-out infinite;
    }
    
    .floating-tea-leaf:nth-child(1) { top: 20%; left: 10%; animation-delay: 0s; }
    .floating-tea-leaf:nth-child(2) { top: 60%; right: 15%; animation-delay: 2s; }
    .floating-tea-leaf:nth-child(3) { bottom: 30%; left: 20%; animation-delay: 4s; }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(10deg); }
    }
    
    .stats-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 1px solid rgba(102, 126, 234, 0.1);
    }
    
    .stats-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .stats-number {
        font-size: 3rem;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .mission-vision-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        border-left: 5px solid;
    }
    
    .mission-card { border-left-color: #667eea; }
    .vision-card { border-left-color: #764ba2; }
    .values-card { border-left-color: #48bb78; }
    
    .mission-vision-card:hover {
        transform: translateX(10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }
    
    .founder-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        position: relative;
        overflow: hidden;
    }
    
    .founder-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(135deg, #667eea, #764ba2);
    }
    
    .founder-image {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #f8f9fa;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 3rem;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 2px;
    }
    
    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        margin: 0 auto 1rem;
    }
    
    .timeline-item {
        position: relative;
        padding-left: 2rem;
        margin-bottom: 2rem;
    }
    
    .timeline-item::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
    }
    
    .timeline-item::after {
        content: '';
        position: absolute;
        left: 5px;
        top: 12px;
        width: 2px;
        height: calc(100% + 1rem);
        background: linear-gradient(to bottom, #667eea, transparent);
    }
    
    .timeline-item:last-child::after {
        display: none;
    }
    
    .badge-custom {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        margin: 0.2rem;
        display: inline-block;
    }
</style>

