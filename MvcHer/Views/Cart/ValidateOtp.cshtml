@model MvcHer.Models.OtpValidationModel
@{
    ViewData["Title"] = "Enter OTP - Secure Checkout";
}

<!-- Hero Section -->
<div class="container-fluid py-5" style="background:none;">
    <div class="container">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bold mb-3">üîê Enter OTP</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center bg-transparent">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-white">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Cart")" class="text-white">Cart</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("VerifyIdentity")" class="text-white">Verify Identity</a></li>
                    <li class="breadcrumb-item active text-white" aria-current="page">Enter OTP</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-4 rounded-top-4">
                    <h3 class="mb-0">
                        <i class="fas fa-mobile-alt me-2"></i>
                        OTP Verification
                    </h3>
                    <p class="mb-0 mt-2 opacity-75">Enter the 6-digit code we sent you</p>
                </div>
                
                <div class="card-body p-5">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="text-center mb-4">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-key text-success" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="mb-2">Hello</h4>
                        <p class="text-muted mb-2">We've sent a 6-digit OTP to:</p>
                        <div class="row g-2 mb-3">
                            <div class="col-12">
                                <div class="bg-light rounded-3 p-3">
                                    <i class="fas fa-phone text-success me-2"></i>
                                    <strong>@Model.PhoneNumber</strong>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="bg-light rounded-3 p-3">
                                    <i class="fas fa-envelope text-success me-2"></i>
                                    <strong></strong>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-info border-0" role="alert">
                            <i class="fas fa-clock me-2"></i>
                            <span id="timer">OTP expires in <strong>5:00</strong></span>
                        </div>
                    </div>

                    <form asp-action="ValidateOtp" method="post" id="otpForm">
                       @*  <input type="hidden" asp-for="FullName" /> *@
                        <input type="hidden" asp-for="PhoneNumber" />
                       @*  <input type="hidden" asp-for="Email" /> *@
                        <input type="hidden" asp-for="ExpiryTime" />

                        <div class="mb-4">
                            <label asp-for="OtpCode" class="form-label fw-bold text-center d-block">
                                <i class="fas fa-shield-alt me-2 text-success"></i>Enter 6-Digit OTP
                            </label>
                            <input asp-for="OtpCode" class="form-control form-control-lg text-center rounded-3" 
                                   placeholder="000000" maxlength="6" style="font-size: 2rem; letter-spacing: 0.5rem;" 
                                   autocomplete="one-time-code" inputmode="numeric" pattern="[0-9]*">
                            <span asp-validation-for="OtpCode" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg rounded-3" id="verifyBtn">
                                <span class="btn-text">
                                    <i class="fas fa-check-circle me-2"></i>Verify OTP
                                </span>
                                <span class="btn-loading d-none">
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    Verifying...
                                </span>
                            </button>
                            
                            <button type="button" class="btn btn-outline-primary btn-lg rounded-3" id="resendBtn">
                                <i class="fas fa-redo me-2"></i>Resend OTP
                            </button>
                            
                            <a href="@Url.Action("VerifyIdentity")" class="btn btn-outline-secondary rounded-3">
                                <i class="fas fa-arrow-left me-2"></i>Change Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card mt-4 border-0 bg-light">
                <div class="card-body text-center py-4">
                    <h6 class="text-muted mb-3">
                        <i class="fas fa-question-circle me-2"></i>Didn't receive the OTP?
                    </h6>
                    <div class="small text-muted">
                        ‚Ä¢ Check your SMS and email inbox<br>
                        ‚Ä¢ Look in spam/junk folder<br>
                        ‚Ä¢ Wait for 1-2 minutes and try resending<br>
                        ‚Ä¢ Ensure your phone has network coverage
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// OTP Timer
let timeLeft = 300; // 5 minutes in seconds
const timerElement = document.getElementById('timer');
const resendBtn = document.getElementById('resendBtn');

function updateTimer() {
    const minutes = Math.floor(timeLeft / 60);
    const seconds = timeLeft % 60;
    timerElement.innerHTML = `OTP expires in <strong>${minutes}:${seconds.toString().padStart(2, '0')}</strong>`;
    
    if (timeLeft <= 0) {
        timerElement.innerHTML = '<span class="text-danger"><strong>OTP Expired</strong></span>';
        resendBtn.innerHTML = '<i class="fas fa-redo me-2"></i>Get New OTP';
        resendBtn.classList.remove('btn-outline-primary');
        resendBtn.classList.add('btn-primary');
    }
    
    timeLeft--;
}

// Update timer every second
setInterval(updateTimer, 1000);

// Auto-focus OTP input
document.querySelector('input[name="OtpCode"]').focus();

// Auto-submit when 6 digits entered
document.querySelector('input[name="OtpCode"]').addEventListener('input', function(e) {
    // Only allow numbers
    this.value = this.value.replace(/[^0-9]/g, '');
    
    if (this.value.length === 6) {
        // Auto-submit after short delay
        setTimeout(() => {
            document.getElementById('otpForm').submit();
        }, 500);
    }
});

// Form submission loading state
document.getElementById('otpForm').addEventListener('submit', function() {
    const btn = document.getElementById('verifyBtn');
    const btnText = btn.querySelector('.btn-text');
    const btnLoading = btn.querySelector('.btn-loading');
    
    btn.disabled = true;
    btnText.classList.add('d-none');
    btnLoading.classList.remove('d-none');
});

// Resend OTP
document.getElementById('resendBtn').addEventListener('click', function() {
    window.location.href = '@Url.Action("VerifyIdentity")';
});
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
