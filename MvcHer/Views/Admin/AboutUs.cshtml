@model MvcHer.Models.AboutUs?

@{
    ViewData["Title"] = "About Us Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>About Us Management
                    </h4>
                    <a asp-action="EditAboutUs" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Edit About Us
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null)
                    {
                        <div class="row">
                            <div class="col-lg-8">
                                <h3 class="text-primary">@Model.Title</h3>
                                <p class="lead text-muted">@Model.Subtitle</p>
                                <p>@Model.Description</p>

                                <div class="row mt-4">
                                    <div class="col-md-6">
                                        <div class="card border-primary">
                                            <div class="card-header bg-primary text-white">
                                                <h5 class="mb-0"><i class="fas fa-bullseye me-2"></i>Mission</h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="mb-0">@Model.Mission</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-success">
                                            <div class="card-header bg-success text-white">
                                                <h5 class="mb-0"><i class="fas fa-eye me-2"></i>Vision</h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="mb-0">@Model.Vision</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-info mt-3">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0"><i class="fas fa-heart me-2"></i>Values</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0">@Model.Values</p>
                                    </div>
                                </div>

                                <div class="card border-warning mt-3">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="mb-0"><i class="fas fa-user me-2"></i>Founder Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="fw-bold">@Model.FounderName - @Model.FounderTitle</h6>
                                        <p class="fst-italic">"@Model.FounderMessage"</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row text-center">
                                            <div class="col-6 mb-3">
                                                <div class="border rounded p-3">
                                                    <h4 class="text-primary mb-1">@Model.YearsOfExperience</h4>
                                                    <small class="text-muted">Years</small>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <div class="border rounded p-3">
                                                    <h4 class="text-success mb-1">@Model.HappyCustomers.ToString("N0")</h4>
                                                    <small class="text-muted">Customers</small>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <div class="border rounded p-3">
                                                    <h4 class="text-info mb-1">@Model.TeaVarieties</h4>
                                                    <small class="text-muted">Varieties</small>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <div class="border rounded p-3">
                                                    <h4 class="text-warning mb-1">@Model.CountriesServed</h4>
                                                    <small class="text-muted">Countries</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.Awards))
                                {
                                    <div class="card mt-3">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Awards</h5>
                                        </div>
                                        <div class="card-body">
                                            @foreach (var award in Model.Awards.Split(','))
                                            {
                                                <span class="badge bg-warning text-dark me-1 mb-1">@award.Trim()</span>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.Certifications))
                                {
                                    <div class="card mt-3">
                                        <div class="card-header">
                                            <h5 class="mb-0"><i class="fas fa-certificate me-2"></i>Certifications</h5>
                                        </div>
                                        <div class="card-body">
                                            @foreach (var cert in Model.Certifications.Split(','))
                                            {
                                                <span class="badge bg-success me-1 mb-1">@cert.Trim()</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0"><i class="fas fa-info me-2"></i>System Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                                                <p><strong>Last Updated:</strong> @Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                                            </div>
                                            <div class="col-md-6">
                                                <p><strong>Status:</strong> 
                                                    @if (Model.IsActive)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Inactive</span>
                                                    }
                                                </p>
                                                <p><strong>ID:</strong> @Model.Id</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-info-circle fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No About Us Information Found</h4>
                            <p class="text-muted">Create your first About Us page to get started.</p>
                            <a asp-action="EditAboutUs" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create About Us Page
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
