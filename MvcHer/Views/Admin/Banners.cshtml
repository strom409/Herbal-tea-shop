@model List<MvcHer.Models.Banner>
@{
    ViewData["Title"] = "Banner Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-images me-2"></i>Banner Management
                    </h3>
                    <a href="@Url.Action("CreateBanner")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Add New Banner
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-1"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-1"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Subtitle</th>
                                        <th>Display Order</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var banner in Model)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(banner.ImageUrl))
                                                {
                                                    <img src="@banner.ImageUrl" alt="@banner.Title" class="img-thumbnail" style="width: 80px; height: 50px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 50px;">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <strong>@banner.Title</strong>
                                            </td>
                                            <td>
                                                @if (banner.Subtitle.Length > 50)
                                                {
                                                    <span title="@banner.Subtitle">@banner.Subtitle.Substring(0, 50)...</span>
                                                }
                                                else
                                                {
                                                    @banner.Subtitle
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@banner.DisplayOrder</span>
                                            </td>
                                            <td>
                                                @if (banner.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">@banner.CreatedAt.ToString("MMM dd, yyyy")</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="viewBanner(@banner.Id)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="editBanner(@banner.Id)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <form method="post" action="@Url.Action("ToggleBannerStatus")" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@banner.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-warning" title="Toggle Status">
                                                            <i class="fas fa-toggle-@(banner.IsActive ? "on" : "off")"></i>
                                                        </button>
                                                    </form>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteBanner(@banner.Id, '@banner.Title')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-images fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No banners found</h5>
                            <p class="text-muted">Create your first banner to get started.</p>
                            <a href="@Url.Action("CreateBanner")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Add New Banner
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the banner "<span id="bannerTitle"></span>"?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function viewBanner(id) {
        window.location.href = '@Url.Action("ViewBanner")/' + id;
    }

    function editBanner(id) {
        window.location.href = '@Url.Action("EditBanner")/' + id;
    }

    function deleteBanner(id, title) {
        document.getElementById('bannerTitle').textContent = title;
        document.getElementById('deleteForm').action = '@Url.Action("DeleteBanner")/' + id;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
