@model IEnumerable<MvcHer.Models.Product>

@{
    ViewData["Title"] = "Premium Tea Collection";
}

<!-- Hero Section with Gradient Background -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content text-center">
            <div class="hero-badge mb-4">
                <span class="badge-text">üçÉ Premium Collection</span>
            </div>
            <h1 class="hero-title mb-4">
                Discover the World's
                <span class="gradient-text">Finest Teas</span>
            </h1>
            <p class="hero-subtitle mb-5">
                Handpicked from the most prestigious tea gardens around the globe
            </p>
            <div class="hero-stats">
                <div class="stat-item">
                    <div class="stat-number">50+</div>
                    <div class="stat-label">Premium Blends</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">100%</div>
                    <div class="stat-label">Organic</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">24h</div>
                    <div class="stat-label">Fresh Delivery</div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-scroll-indicator">
        <div class="scroll-arrow"></div>
    </div>
</div>

<!-- Premium Tea Collection -->
<div class="tea-collection-section">
    <div class="container">
        <!-- Collection Header -->
        <div class="collection-header text-center mb-5">
            <div class="section-badge mb-3">
                <span class="badge-icon">‚ú®</span>
                <span class="badge-text">Curated Selection</span>
            </div>
            <h2 class="collection-title mb-4">
                Our Premium Tea Collection
            </h2>
            <p class="collection-subtitle">
                Each blend tells a story of tradition, craftsmanship, and exceptional quality
            </p>
        </div>

        <!-- Modern Filter Bar -->
        <div class="filter-bar mb-5">
            <div class="filter-container">
                <div class="filter-group">

                    <!-- Category section removed but layout preserved -->
                    <div class="filter-item" style="display:none;"></div>

                    <div class="filter-item">
                        <label class="filter-label">Price </label>
                        <div class="custom-select">
                            <select class="filter-select" id="priceFilter">
                                <option value="">All Prices</option>
                                <option value="0-20">‚Çπ0 - ‚Çπ500</option>
                                <option value="20-40">‚Çπ500 - ‚Çπ1000</option>
                                <option value="40-60">‚Çπ1000 - ‚Çπ1500</option>
                                <option value="60+">‚Çπ1500+</option>
                            </select>
                            <div class="select-arrow"></div>
                        </div>
                    </div>

                    <div class="filter-item">
                        <label class="filter-label">Sort By</label>
                        <div class="custom-select">
                            <select class="filter-select" id="sortFilter">
                                <option value="">Featured</option>
                                <option value="name">Name A-Z</option>
                                <option value="price-low">Price: Low to High</option>
                                <option value="price-high">Price: High to Low</option>
                                <option value="rating">‚≠ê Top Rated</option>
                            </select>
                            <div class="select-arrow"></div>
                        </div>
                    </div>

                    <div class="filter-item">
                        <button class="filter-apply-btn" onclick="applyFilters()">
                            <span class="btn-icon">üîç</span>
                            <span class="btn-text">Clear Filters</span>
                        </button>
                    </div>
                </div>


            </div>
        </div>

        <!-- Premium Products Grid -->
        <div class="products-grid" id="productsGrid">
            @if (Model != null && Model.Any())
            {
                @foreach (var product in Model)
                {
                    <div class="product-card" data-category="@(product.Category?.ToLower() ?? "general")" data-price="@product.Price">
                        <div class="card-inner">
                            <!-- Product Image -->
                            <div class="product-image-container">
                                <img class="product-image"
                                     src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/img/product-1.jpg" : product.ImageUrl)"
                                     alt="@product.Name"
                                     loading="lazy">
                                <div class="product-badges">
                                    <span class="badge premium-badge">‚ú® Premium</span>
                                    @if (product.Price < 500)
                                    {
                                        <span class="badge sale-badge">üî• Best Value</span>
                                    }
                            </div>
                            <div class="product-overlay">
                                <div class="overlay-buttons">
                                    <button class="action-btn quick-view-btn"
                                            data-product-id="@product.Id"
                                            data-product-name="@product.Name"
                                            data-product-price="@product.Price.ToString("F2")"
                                            data-product-image="@(string.IsNullOrEmpty(product.ImageUrl) ? "/img/product-1.jpg" : product.ImageUrl)"
                                            data-product-description="@product.Description"
                                            title="Quick View">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="action-btn wishlist-btn" title="Add to Wishlist">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="action-btn share-btn" title="Share">
                                        <i class="fas fa-share-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Product Info -->
                        <div class="product-info">
                            <div class="product-category">
                                @(string.IsNullOrEmpty(product.Category) ? "Premium Tea" : product.Category)
                            </div>
                            <h3 class="product-title">@product.Name</h3>
                            <p class="product-description">
                                @(string.IsNullOrEmpty(product.Description) ? "Handcrafted premium tea blend with exceptional flavor and aroma" :
                                                            (product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description))
                        </p>

                                <!-- Rating -->
                                <div class="product-rating">
                                    <div class="stars">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                    </div>
                                    <span class="rating-text">(4.9) 127 reviews</span>
                                </div>

                                <!-- Price and Actions -->
                                <div class="product-footer">
                                    <div class="price-section">
                                        <span class="current-price">‚Çπ@product.Price.ToString("F0")</span>
                                @if (product.Price > 300)
                                        {
                                            <span class="original-price">‚Çπ@((product.Price * 1.2m).ToString("F0"))</span>
                                            <span class="discount-badge">17% OFF</span>
                                        }
                                    </div>
                                    <button class="add-to-cart-btn"
                                            data-product-id="@product.Id"
                                            data-product-name="@product.Name"
                                            data-product-price="@product.Price.ToString("F2")"
                                            data-product-image="@(string.IsNullOrEmpty(product.ImageUrl) ? "/img/product-1.jpg" : product.ImageUrl)">
                                        <span class="btn-icon">üõí</span>
                                        <span class="btn-text">Add to Cart</span>
                                        <div class="btn-loading">
                                            <div class="spinner"></div>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        üçÉ
                    </div>
                    <h3 class="empty-state-title">No Premium Teas Found</h3>
                    <p class="empty-state-description">
                        We couldn't find any teas matching your criteria.<br>
                        Try adjusting your filters or explore our full collection.
                    </p>
                    <button class="empty-state-btn" onclick="clearFilters()">
                        <span class="btn-icon">üîÑ</span>
                        <span class="btn-text">Clear Filters</span>
                    </button>
                </div>
            }
        </div>

        
<!-- Store End -->

