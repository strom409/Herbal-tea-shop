@section Scripts {
    <script>
        $(document).ready(function() {
            // Add to Cart functionality with new design
            $('.add-to-cart-btn').click(function(e) {
                e.preventDefault();

                var productId = $(this).data('product-id');
                var productName = $(this).data('product-name');

                // Add loading state
                var $button = $(this);
                $button.addClass('loading');

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: 1
                    },
                    success: function(response) {
                        if (response.success) {
                            // Update cart count in navigation
                            updateCartCount();

                            // Show premium success notification
                            showPremiumNotification('success', 'üõí ' + productName + ' added to cart!', 'Your premium tea selection awaits');

                            // Add success animation
                            $button.removeClass('loading');
                            $button.find('.btn-text').text('Added!');
                            $button.find('.btn-icon').text('‚úì');

                            setTimeout(() => {
                                $button.find('.btn-text').text('Add to Cart');
                                $button.find('.btn-icon').text('üõí');
                            }, 2000);
                        } else {
                            $button.removeClass('loading');
                            showPremiumNotification('error', '‚ùå Error', response.message || 'Failed to add item to cart');
                        }
                    },
                    error: function() {
                        $button.removeClass('loading');
                        showPremiumNotification('error', '‚ùå Connection Error', 'Please check your internet connection and try again');
                    }
                });
            });

            // Quick View functionality
            $('.quick-view-btn').click(function(e) {
                e.preventDefault();

                var productId = $(this).data('product-id');
                var productName = $(this).data('product-name');
                var productPrice = $(this).data('product-price');
                var productImage = $(this).data('product-image');
                var productDescription = $(this).data('product-description');

                // Create and show premium modal
                showPremiumProductModal(productId, productName, productPrice, productImage, productDescription);
            });

            // Filter functionality
            $('#categoryFilter, #priceFilter, #sortFilter').change(function() {
                // Auto-apply filters when changed
                applyFilters();
            });

            // View toggle functionality
            $('.view-btn').click(function() {
                $('.view-btn').removeClass('active');
                $(this).addClass('active');

                var view = $(this).data('view');
                if (view === 'list') {
                    $('.products-grid').addClass('list-view');
                } else {
                    $('.products-grid').removeClass('list-view');
                }
            });

            // Wishlist functionality
            $('.wishlist-btn').click(function(e) {
                e.preventDefault();
                $(this).toggleClass('active');

                if ($(this).hasClass('active')) {
                    $(this).find('i').removeClass('far').addClass('fas');
                    showPremiumNotification('success', '‚ù§Ô∏è Added to Wishlist', 'You can view your wishlist anytime');
                } else {
                    $(this).find('i').removeClass('fas').addClass('far');
                    showPremiumNotification('info', 'üíî Removed from Wishlist', 'Item removed from your wishlist');
                }
            });

            // Share functionality
            $('.share-btn').click(function(e) {
                e.preventDefault();

                if (navigator.share) {
                    navigator.share({
                        title: 'Check out this premium tea!',
                        text: 'Discover amazing tea blends at TeaHouse',
                        url: window.location.href
                    });
                } else {
                    // Fallback - copy to clipboard
                    navigator.clipboard.writeText(window.location.href).then(() => {
                        showPremiumNotification('success', 'üîó Link Copied', 'Share this amazing tea with friends!');
                    });
                }
            });
        });

        function updateCartCount() {
            $.ajax({
                url: '@Url.Action("GetCartCount", "Cart")',
                type: 'GET',
                success: function(response) {
                    // Update cart count display if it exists
                    $('.cart-count').text(response.count);
                    $('#cart-count').text(response.count);
                }
            });
        }

        // Premium notification system
        function showPremiumNotification(type, title, message) {
            var iconMap = {
                'success': '‚úÖ',
                'error': '‚ùå',
                'info': '‚ÑπÔ∏è',
                'warning': '‚ö†Ô∏è'
            };

            var colorMap = {
                'success': 'linear-gradient(135deg, #10b981, #059669)',
                'error': 'linear-gradient(135deg, #ef4444, #dc2626)',
