        // Quick Track Form Handler
        document.getElementById('quickTrackForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const orderNumber = document.getElementById('quickOrderNumber').value.trim();

            if (orderNumber) {
                // Redirect to tracking page with order number
                window.location.href = '/Order/Track?orderNumber=' + encodeURIComponent(orderNumber);
            } else {
                alert('Please enter an order number.');
            }
        });

        // Auto-focus on order number input when modal opens
        document.getElementById('quickTrackModal').addEventListener('shown.bs.modal', function () {
            document.getElementById('quickOrderNumber').focus();
        });

        // Load Social Links
        function loadSocialLinks() {
            fetch('/Home/GetSocialLinks')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('socialLinksContainer');
                    if (container && data && data.length > 0) {
                        container.innerHTML = data.map(link =>
                            `<a class="btn btn-square btn-primary rounded-circle me-2" href="${link.url}" target="_blank" title="${link.displayName}">
                                <i class="${link.iconClass}"></i>
                            </a>`
                        ).join('');
                    }
                })
                .catch(error => {
                    console.log('Social links not available:', error);
                    // Fallback to static social links for Instagram, Facebook, and Twitter
                    const container = document.getElementById('socialLinksContainer');
                    if (container) {
                        container.innerHTML = `
                            <a class="btn btn-square btn-primary rounded-circle me-2" href="https://twitter.com/herbaltea" target="_blank" title="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-square btn-primary rounded-circle me-2" href="https://facebook.com/herbaltea" target="_blank" title="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-square btn-primary rounded-circle me-2" href="https://instagram.com/herbaltea" target="_blank" title="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                        `;
                    }
                });
        }

        // Load social links when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadSocialLinks();

            // Fix duplicate footer issue
            const footers = document.querySelectorAll('.footer');
            if (footers.length > 1) {
                console.log('Found duplicate footers, removing extras...');
                for (let i = 1; i < footers.length; i++) {
                    footers[i].remove();
                }
            }
        });
